<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/itemCardViewMargin"
        app:cardCornerRadius="@dimen/itemCardViewCornerRadius"
        app:cardBackgroundColor="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/itemTextViewMargin"/>

            <TextView
                android:id="@+id/textViewEmail"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/itemTextViewMarginEnd"
                android:layout_marginStart="@dimen/itemTextViewMarginStart"
                android:layout_marginTop="@dimen/itemTextViewMarginTop"/>

            <TextView
                android:id="@+id/textViewName"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/itemTextViewMargin"/>

            <TextView
                android:id="@+id/textViewLastName"
                style="@style/TextAppearance.AppCompat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/itemTextViewMargin"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>

